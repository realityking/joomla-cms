<?xml version="1.0" ?>
<extension
	version="1.6"
	type="plugin"
	group="captcha">
	<name>Captcha - ReCaptcha</name>
	<version>1.0</version>
	<creationDate>Jan 2010</creationDate>
	<author></author>
	<authorEmail>N/A</authorEmail>
	<authorUrl></authorUrl>
	<copyright></copyright>
	<license></license>
	<description>PLG_CAPTCHA_RECAPTCHA_XML_DESCRIPTION</description>
	<files>
		<filename
			plugin="securimage">securimage.php</filename>
	</files>
	<config>
	<fields name="params">

		<fieldset name="basic">
			<field
			name="image_width"
			type="text"
			default="175"
			label="PLG_SECURIMAGE_IMAGE_WIDTH_LABEL"
			description="PLG_SECURIMAGE_IMAGE_WIDTH_DESC"
			required="true"
			filter="int"
			size="8" />

			<field
			name="image_height"
			type="text"
			default="45"
			label="PLG_SECURIMAGE_IMAGE_HEIGHT_LABEL"
			description="PLG_SECURIMAGE_IMAGE_HEIGHT_DESC"
			required="true"
			filter="int"
			size="8" />

			<field
			name="image_type"
			type="list"
			default="2"
			label="PLG_SECURIMAGE_IMAGE_TYPE_LABEL"
			description="PLG_SECURIMAGE_IMAGE_TYPE_DESC"
			required="true"
			filter="word">
			<option
				value="jpg">PLG_SECURIMAGE_JPEG</option>
			<option
				value="gif">PLG_SECURIMAGE_GIF</option>
			<option
				value="png">PLG_SECURIMAGE_PNG</option>
			</field>

			<field
			name="code_length"
			type="text"
			default="4"
			label="PLG_SECURIMAGE_CODE_LENGTH_LABEL"
			description="PLG_SECURIMAGE_CODE_LENGTH_DESC"
			required="true"
			filter="int"
			size="8" />

			<field
			name="charset"
			type="text"
			default="ABCDEFGHKLMNPRSTUVWYZ23456789"
			label="PLG_SECURIMAGE_CHARSET_LABEL"
			description="PLG_SECURIMAGE_CHARSET_DESC"
			required="true"
			filter="string"
			size="45" />

			<field
			name="case_sensitive"
			type="radio"
			default="0"
			label="PLG_SECURIMAGE_CASE_SENSITIVE_LABEL"
			description="PLG_SECURIMAGE_CASE_SENSITIVE_DESC"
			required="true"
			validate="boolean" >
			<option
				value="1">JYES</option>
			<option
				value="0">JNO</option>
			</field>

			<field
			name="font_type"
			type="radio"
			default="ttf"
			label="PLG_SECURIMAGE_FONT_TYPE_LABEL"
			description="PLG_SECURIMAGE_FONT_TYPE_DESC"
			required="true" >
			<option
				value="GD" onclick="$('jform_params_ttf_font_file-lbl').setStyle('display', 'none');$('jform_params_ttf_font_file').setStyle('display', 'none');$('jform_params_ttf_font_size-lbl').setStyle('display', 'none');$('jform_params_ttf_font_size').setStyle('display', 'none');$('jform_params_gd_font_file-lbl').setStyle('display', 'block');$('jform_params_gd_font_file').setStyle('display', 'block');$('jform_params_gd_font_size-lbl').setStyle('display', 'block');$('jform_params_gd_font_size').setStyle('display', 'block');">
				PLG_SECURIMAGE_GD</option>
			<option
				value="TTF" onclick="$('jform_params_ttf_font_file-lbl').setStyle('display', 'block');$('jform_params_ttf_font_file').setStyle('display', 'block');$('jform_params_ttf_font_size-lbl').setStyle('display', 'block');$('jform_params_ttf_font_size').setStyle('display', 'block');$('jform_params_gd_font_file-lbl').setStyle('display', 'none');$('jform_params_gd_font_file').setStyle('display', 'none');$('jform_params_gd_font_size-lbl').setStyle('display', 'none');$('jform_params_gd_font_size').setStyle('display', 'none');">
				PLG_SECURIMAGE_TTF</option>
			</field>

			<field
			name="gd_font_file"
			type="filelist"
			default=""
			label="PLG_SECURIMAGE_GD_FONT_FILE_LABEL"
			description="PLG_SECURIMAGE_GD_FONT_FILE_DESC"
			filter="\.gdf$"
			directory="images"
			hide_none="true"
			size="">
			<option
				value="automatic.gdf">Automatic</option>
			<option
				value="bubblebath.gdf">Bubblebath</option>
			<option
				value="caveman.gdf">Caveman</option>
			<option
				value="crass.gdf">Crass</option>
			</field>

			<field
			name="gd_font_size"
			type="text"
			default="20"
			label="PLG_SECURIMAGE_GD_FONT_SIZE_LABEL"
			description="PLG_SECURIMAGE_GD_FONT_SIZE_DESC"
			required="true"
			filter="int"
			size="8" />

			<field
			name="ttf_font_file"
			type="filelist"
			default=""
			label="PLG_SECURIMAGE_TTF_FONT_FILE_LABEL"
			description="PLG_SECURIMAGE_TTF_FONT_FILE_DESC"
			filter="\.ttf$"
			directory="images"
			hide_none="true">
			<option
				value="elephant.ttf">Elephant</option>
			<option
				value="fixed_bold.ttf">Fixed Bold</option>
			<option
				value="malapropism.ttf">Malapropism</option>
			<option
				value="painty_paint.ttf">Painty Paint</option>
			<option
				value="plastique.ttf">Plastique</option>
			<option
				value="dread.ttf">Dread</option>
			<option
				value="scratchy.ttf">Scratchy</option>
			<option
				value="weltron_urban.ttf">Weltron Urban</option>
			</field>

			<field
			name="ttf_font_size"
			type="text"
			default="24"
			label="PLG_SECURIMAGE_TTF_FONT_SIZE_LABEL"
			description="PLG_SECURIMAGE_TTF_FONT_SIZE_DESC"
			required="true"
			filter="int"
			size="8" />

			<field
			name="text_angle_minimum"
			type="text"
			default="-20"
			label="PLG_SECURIMAGE_TEXT_ANGLE_MINIMUM_LABEL"
			description="PLG_SECURIMAGE_TEXT_ANGLE_MINIMUM_DESC"
			required="true"
			filter="int"
			size="8" />

			<field
			name="text_angle_maximum"
			type="text"
			default="20"
			label="PLG_SECURIMAGE_TEXT_ANGLE_MAXIMUM_LABEL"
			description="PLG_SECURIMAGE_TEXT_ANGLE_MAXIMUM_DESC"
			required="true"
			filter="int"
			size="8" />

			<field
			name="text_x_start"
			type="text"
			default="8"
			label="PLG_SECURIMAGE_TEXT_X_START_LABEL"
			description="PLG_SECURIMAGE_TEXT_X_START_DESC"
			required="true"
			filter="int"
			size="8" />

			<field
			name="text_minimum_distance"
			type="text"
			default="30"
			label="PLG_SECURIMAGE_TEXT_MINIMUM_DISTANCE_LABEL"
			description="PLG_SECURIMAGE_TEXT_MINIMUM_DISTANCE_DESC"
			required="true"
			filter="int"
			size="8" />

			<field
			name="text_maximum_distance"
			type="text"
			default="33"
			label="PLG_SECURIMAGE_TEXT_MAXIMUM_DISTANCE_LABEL"
			description="PLG_SECURIMAGE_TEXT_MAXIMUM_DISTANCE_DESC"
			required="true"
			filter="int"
			size="8" />

			<field
			name="background_image_file"
			type="imagelist"
			default="-1"
			directory="media/system/images/captcha"
			label="PLG_SECURIMAGE_BGIMG_LABEL"
			description="PLG_SECURIMAGE_BGIMG_DESC"
			hide_default="true" />

			<field
			name="image_bg_color"
			type="text"
			default="#E3DAED"
			label="PLG_SECURIMAGE_IMAGE_BG_COLOR_LABEL"
			description="PLG_SECURIMAGE_IMAGE_BG_COLOR_DESC"
			required="true"
			size="8" />

			<field
			name="text_color"
			type="text"
			default="#000000,#000033,#003333,#003300"
			label="PLG_SECURIMAGE_TEXT_COLOR_LABEL"
			description="PLG_SECURIMAGE_TEXT_COLOR_DESC"
			required="true"
			filter=""
			size="45" />

			<field
			name="use_transparent_text"
			type="radio"
			default="1"
			label="PLG_SECURIMAGE_USE_TRANSPARENT_TEXT_LABEL"
			description="PLG_SECURIMAGE_USE_TRANSPARENT_TEXT_DESC"
			required="true"
			validate="boolean"
			size="" >
			<option
				value="1">JYes</option>
			<option
				value="0">JNo</option>
			</field>

			<field
			name="text_transparency_percentage"
			type="text"
			default="15"
			label="PLG_SECURIMAGE_TEXT_TRANSPARENCY_PERCENTAGE_LABEL"
			description="PLG_SECURIMAGE_TEXT_TRANSPARENCY_PERCENTAGE_DESC"
			required="true"
			filter="int"
			size="8" />

			<field
			name="line_color"
			type="text"
			default="#80BFFF"
			label="PLG_SECURIMAGE_LINE_COLOR_LABEL"
			description="PLG_SECURIMAGE_LINE_COLOR_DESC"
			required="true"
			filter=""
			size="8" />

			<field
			name="draw_lines"
			type="radio"
			default="below"
			label="PLG_SECURIMAGE_DRAW_LINES_OVER_TEXT_LABEL"
			description="PLG_SECURIMAGE_DRAW_LINES_OVER_TEXT_DESC"
			required="true" >
			<option
				value="below">PLG_SECURIMAGE_BELOW_TEXT</option>
			<option
				value="above">PLG_SECURIMAGE_ABOVE_TEXT</option>
			<option
				value="0">PLG_SECURIMAGE_NO_LINES</option>
			</field>

			<field
			name="num_lines"
			type="text"
			default="10"
			label="PLG_SECURIMAGE_NUM_LINES_LABEL"
			description="PLG_SECURIMAGE_TEXT_NUM_LINES_DESC"
			required="true"
			filter="int"
			size="8" />
		</fieldset>
	</fields>
	</config>
</extension>