<?xml version="1.0" ?>
<extension version="2.5" type="plugin" group="captcha">
	<name>plg_captcha_securimage</name>
	<author>Joomla! Project</author>
	<creationDate>December 2011</creationDate>
	<copyright>Copyright (C) 2005 - 2011 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<description>PLG_CAPTCHA_SECURIMAGE_XML_DESCRIPTION</description>
	<files>
		<filename
			plugin="securimage">securimage.php</filename>
	</files>
	<config>
	<fields name="params">

	<fieldset name="basic">
		<field
			name="captcha_type"
			type="list"
			default="0"
			label="PLG_SECURIMAGE_CAPTCHA_TYPE_LABEL"
			description="PLG_SECURIMAGE_CAPTCHA_TYPE_DESC"
			required="true"
			filter="boolean">
			<option
				value="0">PLG_SECURIMAGE_STRING</option>
			<option
				value="1">PLG_SECURIMAGE_MATHEMATIC</option>
			</field>

		<field
			name="image_width"
			type="text"
			default="175"
			label="PLG_SECURIMAGE_IMAGE_WIDTH_LABEL"
			description="PLG_SECURIMAGE_IMAGE_WIDTH_DESC"
			required="true"
			filter="int"
			size="8" />

		<field
			name="image_height"
			type="text"
			default="45"
			label="PLG_SECURIMAGE_IMAGE_HEIGHT_LABEL"
			description="PLG_SECURIMAGE_IMAGE_HEIGHT_DESC"
			required="true"
			filter="int"
			size="8" />

		<field
			name="image_type"
			type="list"
			default="png"
			label="PLG_SECURIMAGE_IMAGE_TYPE_LABEL"
			description="PLG_SECURIMAGE_IMAGE_TYPE_DESC"
			required="true"
			filter="word">
			<option
				value="jpg">PLG_SECURIMAGE_JPEG</option>
			<option
				value="gif">PLG_SECURIMAGE_GIF</option>
			<option
				value="png">PLG_SECURIMAGE_PNG</option>
			</field>

		<field
			name="code_length"
			type="text"
			default="6"
			label="PLG_SECURIMAGE_CODE_LENGTH_LABEL"
			description="PLG_SECURIMAGE_CODE_LENGTH_DESC"
			required="true"
			filter="int"
			size="8" />

		<field
			name="charset"
			type="text"
			default="ABCDEFGHKLMNPRSTUVWYZabcdefghklmnprstuvwyz23456789"
			label="PLG_SECURIMAGE_CHARSET_LABEL"
			description="PLG_SECURIMAGE_CHARSET_DESC"
			required="true"
			filter="string"
			size="45" />

		<field
			name="case_sensitive"
			type="radio"
			default="0"
			label="PLG_SECURIMAGE_CASE_SENSITIVE_LABEL"
			description="PLG_SECURIMAGE_CASE_SENSITIVE_DESC"
			required="true"
			validate="boolean" >
			<option
				value="1">JYES</option>
			<option
				value="0">JNO</option>
			</field>

		<field
			name="ttf_file"
			type="filelist"
			default=""
			label="PLG_SECURIMAGE_TTF_FONT_FILE_LABEL"
			description="PLG_SECURIMAGE_TTF_FONT_FILE_DESC"
			filter="\.ttf$"
			directory="images"
			hide_none="true">
			</field>

		<field
			name="bgimg"
			type="imagelist"
			default="-1"
			directory="images"
			label="PLG_SECURIMAGE_BGIMG_LABEL"
			description="PLG_SECURIMAGE_BGIMG_DESC"
			hide_default="true"
			multiple="true" />

		<field
			name="image_bg_color"
			type="text"
			default="#FFFFFF"
			label="PLG_SECURIMAGE_IMAGE_BG_COLOR_LABEL"
			description="PLG_SECURIMAGE_IMAGE_BG_COLOR_DESC"
			required="true"
			validate="color"
			size="8" />

		<field
			name="text_color"
			type="text"
			default="#616161"
			label="PLG_SECURIMAGE_TEXT_COLOR_LABEL"
			description="PLG_SECURIMAGE_TEXT_COLOR_DESC"
			required="true"
			validate="color"
			size="8" />

		<field
			name="use_transparent_text"
			type="radio"
			default="1"
			label="PLG_SECURIMAGE_USE_TRANSPARENT_TEXT_LABEL"
			description="PLG_SECURIMAGE_USE_TRANSPARENT_TEXT_DESC"
			required="true"
			validate="boolean"
			size="" >
			<option
				value="1">JYes</option>
			<option
				value="0">JNo</option>
			</field>

		<field
			name="text_transparency_percentage"
			type="text"
			default="15"
			label="PLG_SECURIMAGE_TEXT_TRANSPARENCY_PERCENTAGE_LABEL"
			description="PLG_SECURIMAGE_TEXT_TRANSPARENCY_PERCENTAGE_DESC"
			required="true"
			filter="int"
			size="8" />

		<field
			name="line_color"
			type="text"
			default="#616161"
			label="PLG_SECURIMAGE_LINE_COLOR_LABEL"
			description="PLG_SECURIMAGE_LINE_COLOR_DESC"
			required="true"
			validate="color"
			size="8" />

		<field
			name="noise_color"
			type="text"
			default="#616161"
			label="PLG_SECURIMAGE_NOISE_COLOR_LABEL"
			description="PLG_SECURIMAGE_NOISE_COLOR_DESC"
			required="true"
			validate="color"
			size="8" />

		<field
			name="perturbation"
			type="text"
			default="0.75"
			label="PLG_SECURIMAGE_PERTURBATION_LABEL"
			description="PLG_SECURIMAGE_PERTURBATION_DESC"
			required="true"
			filter="floatval"
			size="8" />

		<field
			name="noise_level"
			type="text"
			default="0"
			label="PLG_SECURIMAGE_NOISE_LEVEL_LABEL"
			description="PLG_SECURIMAGE_NOISE_LEVEL_DESC"
			required="true"
			filter="intval"
			size="3" />

		<field
			name="image_signature"
			type="text"
			default=""
			label="PLG_SECURIMAGE_IMAGE_SIGNATURE_LABEL"
			description="PLG_SECURIMAGE_IMAGE_SIGNATURE_DESC"
			filter=""
			size="45" />

		<field
			name="signature_color"
			type="text"
			default="#616161"
			label="PLG_SECURIMAGE_SIGNATURE_COLOR_LABEL"
			description="PLG_SECURIMAGE_SIGNATURE_COLOR_DESC"
			validate="color"
			size="8" />

		<field
			name="signature_font"
			type="filelist"
			default=""
			label="PLG_SECURIMAGE_SIGNATURE_FONT_LABEL"
			description="PLG_SECURIMAGE_SIGNATURE_FONT_DESC"
			filter="\.ttf$"
			directory="images"
			hide_none="true">
			</field>

		<field
			name="num_lines"
			type="text"
			default="8"
			label="PLG_SECURIMAGE_NUM_LINES_LABEL"
			description="PLG_SECURIMAGE_TEXT_NUM_LINES_DESC"
			required="true"
			filter="int"
			size="8" />
		</fieldset>
	</fields>
	</config>
</extension>